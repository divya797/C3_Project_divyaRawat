  @Test
    public void adding_items_should_return_the_total_amount(){
    	setUpAddMenu();
    	String[] itemName= {"Sweet corn soup","Vegetable lasagne"};
    	int orderTotal= restaurant.getOrderTotal(itemName);
    	assertEquals(388,orderTotal);
    	
    }
	
	
	
	
	public int getOrderTotal(String[] itemNames) {
		Item itemToBeCalculated;
		int orderTotal=0;
		for(String itemName:itemNames) {
			itemToBeCalculated = findItemByName(itemName);
			orderTotal +=itemToBeCalculated.getPrice();
		}
		return orderTotal;

	}
	
	
	
	 public int getPrice() {
		return price;
	}
	
	
	
